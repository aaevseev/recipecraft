<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_small"
        android:fontFamily="@font/ubuntu_medium"
        android:text="@string/ingredient_title_header"
        android:textColor="@color/dark_orange_color"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_xlarge"
        android:layout_marginTop="@dimen/size_small"
        android:layout_marginBottom="@dimen/size_small"
        android:drawableStart="@drawable/ic_dot"
        android:drawablePadding="@dimen/size_small"
        android:fontFamily="@font/ubuntu_regular"
        android:maxEms="10"
        android:minEms="10"
        android:textColor="@color/color_main_text"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleHeaderTextView" />

    <TextView
        android:id="@+id/measureTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_small"
        android:layout_marginEnd="@dimen/size_small"
        android:fontFamily="@font/ubuntu_light"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="@+id/titleTextView"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/titleTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>